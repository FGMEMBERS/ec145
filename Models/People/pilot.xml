      <entry><ind> 1 </ind><dep>-0.020 </dep></entry>
      <entry><ind> 0 </ind><dep> 0     </dep></entry>
      <entry><ind>-1 </ind><dep>-0.000 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>forearmr</object-name>
